{% extends "TreewalkerAdminBundle:Layout:layout.html.twig" %}
{% block content %}
    <h2>Edit User</h2>
    {{form_start(form) }}
    
    <div class="field_row">
        {{form_row(form.firstname) }}
        
    </div>
    <div class="field_row">
        {{form_row(form.lastname) }}
        
    </div>
    <div class="field_row">
        {{form_row(form.city) }}
        
    </div>
    <div class="field_row">
        {{form_row(form.country) }}
        
    </div>
    <div class="field_row">
        {{form_row(form.email) }}
        
    </div>
        <div class="field_row">
            {{ form_row(form.dob) }}
        </div>
    <div class="field_row">
        {{form_row(form.username) }}
        
    </div>
    <div class="field_row">
        {{form_row(form.submit) }}        
    </div>
      
    {{form_end(form) }}
    
    <br> <a href="{{ path('treewalker_admin_user_changepassword',{'id':user.id}) }}" >Change Password</a>
{% endblock %}    