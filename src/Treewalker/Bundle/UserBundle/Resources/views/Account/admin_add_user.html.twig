{% extends "TreewalkerAdminBundle:Layout:layout.html.twig" %}

{% block content %}
    <h2> Add User</h2>
    {{form_start(form) }}
    <div class="field_row">
        {{ form_row(form.firstname) }}
    </div>
    <div class="field_row">
        {{ form_row(form.lastname) }}
    </div>
    <div class="field_row">
        {{ form_row(form.city) }}
    </div>
    <div class="field_row">
        {{ form_row(form.country) }}
    </div>
    <div class="field_row">
        {{ form_row(form.email) }}
    </div>
    <div class="field_row">
        {{ form_row(form.username) }}
    </div>
    <div class="field_row">
        {{ form_row(form.password.password) }}
    </div>
    <div class="field_row">
        {{ form_row(form.password.confirm) }}
    </div>
     <div class="field_row">
        {{ form_row(form.submit) }}
    </div>
    
    {{ form_end(form) }}
{% endblock %}